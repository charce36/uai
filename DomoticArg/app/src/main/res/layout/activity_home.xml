<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uai.tfi.domoticarg.HomeActivity"
    android:background="#455A64"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="DomoticARG"
            android:textAppearance="@android:style/TextAppearance.Holo.Large"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            />

        <Button
            android:id="@+id/btnPantallaDispositivos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background = "@drawable/bigbtn"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:text="Mis Dispositivos"
            android:textAppearance="@android:style/TextAppearance.Holo.Large"
            />

        <Button
            android:id="@+id/btnPantallaOpciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background = "@drawable/bigbtn"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:text="Desvincular Dispositivo"
            android:textAppearance="@android:style/TextAppearance.Holo.Large"
            />

        <Button
            android:id="@+id/btnPantallaNosotros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background = "@drawable/bigbtn"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:text="Nosotros / Contacto"
            android:textAppearance="@android:style/TextAppearance.Holo.Large"
            />

        <Button
            android:id="@+id/btnSalir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background = "@drawable/bigbtn"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:text="Salir"
            android:textAppearance="@android:style/TextAppearance.Holo.Large"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v2.5"
            android:layout_weight="0.5"
            android:textAppearance="@android:style/TextAppearance.Holo.Small"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
