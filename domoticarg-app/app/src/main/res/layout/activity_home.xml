<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uai.tfi.domoticarg.HomeActivity"
    android:background="@drawable/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="DomoticArg v2.2"
            android:textAppearance="@android:style/TextAppearance.Holo.Large"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="#000000"
            />

        <Button
            android:id="@+id/btnPantallaDispositivos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background = "@drawable/bigbtn"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:text="Dispositivos"
            android:textAppearance="@android:style/TextAppearance.Holo.Large"
            />

        <Button
            android:id="@+id/btnPantallaOpciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background = "@drawable/bigbtn"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:text="Opciones"
            android:textAppearance="@android:style/TextAppearance.Holo.Large"
            />

        <Button
            android:id="@+id/btnPantallaNosotros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background = "@drawable/bigbtn"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:text="Nosotros"
            android:textAppearance="@android:style/TextAppearance.Holo.Large"
            />

        <Button
            android:id="@+id/btnSalir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background = "@drawable/bigbtn"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:text="Salir"
            android:textAppearance="@android:style/TextAppearance.Holo.Large"
            />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
